<div class="mt-4">
    <h3>Đăng khóa học</h3>
    <form method="POST" action="/courses/store">
        <div class="form-group d-flex">
            <label for="name" class="w-25">Tên khóa học</label>
            <input type="text" class="form-control" id="name" name="name">          
        </div>
        <div class="form-group d-flex">
            <label for="description" class="w-25">Mô tả khóa học</label>
            <input type="text" class="form-control" id="description" name="description">          
        </div>
        <div class="form-group d-flex">
            <label for="videoId" class="w-25">video ID</label>
            <input type="text" class="form-control" id="videoId" name="videoId">          
        </div>
        <div class="form-group d-flex">
            <label for="level" class="w-25">Trình độ</label>
            <input type="text" class="form-control" id="level" name="level">          
        </div>
        <div class="d-flex justify-content-center">
            <button type="submit" class="btn btn-primary ">Thêm khóa học</button>
        </div>
    </form>
</div>